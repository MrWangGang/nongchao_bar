/* /pages/order/detail/index.wxss */
page {
  background-color: #f7f7f7;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
}

.page-wrapper {
  padding-top: 24rpx;
  /* 增加底部内边距，因为没有固定按钮栏了 */
  padding-bottom: 50rpx; 
}

.card {
  background-color: #ffffff;
  border-radius: 20rpx;
  margin: 0 24rpx 24rpx 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.card-content {
  padding: 30rpx;
}

.summary-card .card-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.summary-card {
  background: linear-gradient(to right, #fff6f6, #ffffff);
}

.seat-box {
  border: 2rpx solid #FF4D4F;
  border-radius: 16rpx;
  padding: 20rpx;
  text-align: center;
  flex-shrink: 0;
}

.seat-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #FF4D4F;
}

.seat-meta {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

.date-info {
  text-align: right;
}

.booking-date {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.arrival-time {
  font-size: 26rpx;
  color: #888;
  margin-top: 10rpx;
}

.card-title-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.icons .icon {
  width: 40rpx;
  height: 40rpx;
  margin-left: 30rpx;
}

.form-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 移除最后一个item的底边线 */
.card-content > .form-item:last-child {
  border-bottom: none;
}
.card-title-bar + .form-item {
  padding-top: 10rpx;
}


.label {
  color: #333;
}
.value {
  color: #666;
  text-align: right;
}

.content-card .card-title-bar,
.order-info-card .card-title-bar {
  margin-bottom: 15rpx;
}
.content-item {
  display: flex;
  align-items: flex-start;
  padding-top: 20rpx;
}
.image-wrapper {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  margin-right: 25rpx;
  flex-shrink: 0;
  overflow: hidden;
}
.item-image {
  width: 100%;
  height: 100%;
}
.image-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
}
.item-details {
  display: flex;
  flex-direction: column;
}
.item-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}
.item-desc {
  font-size: 24rpx;
  color: #999;
  margin: 10rpx 0;
}
.item-price {
  font-size: 32rpx;
  color: #FF4D4F;
  font-weight: bold;
  margin-left: 0rpx;
}


/**************************************************************
 * --- 新增样式 ---
 **************************************************************/

/* 1. 顶部支付卡片 */
.payment-card {
  background: linear-gradient(to right, #fff6f6, #ffebeb);
}
.payment-card .card-content {
  text-align: center;
}
.payment-title {
  font-size: 36rpx;
  font-weight: bold;
  color: rgb(236, 24, 24);
}
.countdown-timer {
  margin-left: 16rpx;
  color: #FF4D4F;
  font-size: 40rpx;
}
.payment-subtitle {
  font-size: 24rpx;
  color: #999;
  margin: 16rpx 0 30rpx;
}
.action-buttons {
  display: flex;
  justify-content: center;
  gap: 30rpx;
}
.action-btn {
  width: 200rpx !important;
  height: 60rpx;
  line-height: 30rpx;
  border-radius: 15rpx;
  font-size: 25rpx;
  border: none;
  font-weight: 500;
}
.action-btn::after {
  border: none;
}
.cancel-btn {
  border: 1rpx solid #FF4D4F !important;
  color: #FF4D4F;
  background-color: transparent;
}
.pay-btn {
  background: linear-gradient(to right, #FF7043, #FF4D4F);
  color: #fff;
}

/* 2. 订单信息卡片 */
.copyable {
  display: flex;
  align-items: center;
  color: #333;
}
.copy-btn {
  font-size: 24rpx;
  color: #FF4D4F;
  border: 1rpx solid #FF4D4F;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  margin-left: 16rpx;
}
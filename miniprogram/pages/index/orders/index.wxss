/* /pages/myOrder/index.wxss */

/* 基础设置 */
.page-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f7f7f7;  
}

/* Tab 切换区域 - 调整顶部间距 */
.tab-header {
  display: flex;
  margin-top: 20rpx;  
  margin-left: 30rpx;
  margin-right: 30rpx;
  position: relative;
}
.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 32rpx;
  color: #999;
  position: relative;
}
.tab-item.active {
  font-weight: bold;
  color: #000;
}
.tab-underline {
  position: absolute;
  bottom: -20rpx;  
  width: 60rpx;
  height: 6rpx;
  background-color: transparent;
  border-radius: 3rpx;
  transition: background-color 0.3s;
}
.tab-item.active .tab-underline {
  background-color: #f00;  
}

/* 订单内容区域 */
.order-content {
  flex: 1;
  margin-top: 40rpx;
}
.safe-area-spacer {
  height: 20rpx;  
  height: calc(20rpx + constant(safe-area-inset-bottom));
  height: calc(20rpx + env(safe-area-inset-bottom));
}
.reserve-list, .store-list, .drink-list {
  margin-left: 30rpx;
  margin-right: 30rpx;
}

/* 订单卡片样式 */
.order-card {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;  
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.08);  
  padding-bottom: 0; 
}

/* Card Header (订单头) */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 30rpx 30rpx 20rpx 30rpx;  
  border-bottom: 1rpx solid #eee;
  padding-bottom: 20rpx;  
}

/* 预定订单/新门店订单时间信息 */
.time-info {
  font-size: 26rpx;
  color: #333;
  margin-top: 20rpx;
}
.time-info .label {
  color: #999;
  margin-right: 10rpx;  
}
.status-info {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #f00;  
  margin-top: 20rpx;
}
.arrow-right {
  font-size: 24rpx;
  margin-left: 10rpx;
  color: #999;
}

/* Card Body (商品详情) */
.card-body {
  display: flex;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-bottom: 20rpx;
}

/* --- 门店订单样式 (多图/数量) --- */
.product-images-wrapper {
  display: flex;
  align-items: center;
  flex-wrap: nowrap;
  max-width: 70%; 
  position: relative;
  height: 120rpx;
}
.image-wrapper-mini {
  width: 120rpx; 
  height: 120rpx; 
  border-radius: 20rpx;
  overflow: hidden;
  margin-right: -10rpx;
  border: 4rpx solid #fff; 
  box-sizing: content-box;
  z-index: 1; 
  flex-shrink: 0; 
}
.image-wrapper-mini:nth-child(1) {
  z-index: 10;
}
.image-wrapper-mini:nth-child(2) {
  z-index: 9;
}
.image-wrapper-mini:nth-child(3) {
  z-index: 8;
}
.image-wrapper-mini:nth-child(4) { 
  z-index: 7; 
}
.image-wrapper-mini .combo-image-mini {
  width: 100%;
  height: 100%;
}
.product-image-count {
  width: 120rpx; 
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.4); 
  border-radius: 20rpx;
  border: 4rpx solid #fff; 
  box-sizing: content-box;
  position: relative; 
  z-index: 0; 
  margin-left: -10rpx; 
  flex-shrink: 0;
}
.store-item-count-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: flex-end;
  margin-left: 20rpx;
  min-height: 120rpx;
}
.combo-item-count {
  font-size: 28rpx;
  color: #999;
}


/* --- 预定订单原有样式 --- */
.image-wrapper {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  overflow: hidden;
  margin-right: 20rpx;
}
.combo-image {
  width: 100%; 
  height: 100%; 
}
.seat-overlay {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx; 
  font-weight: bold;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.5);  
}
.combo-details {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
  font-size: 26rpx;
  color: #666;
}
.combo-name {
  font-size: 32rpx;
  font-weight: bold;
  color: rgb(128, 113, 113);
}
.combo-seat {
  margin-top: -15rpx;  
  color: rgb(158, 148, 148);
  font-weight: 500;
}
.combo-arrival {
  margin-top: 5rpx;  
  color: #999;
}


/* Card Footer (价格 - 预定订单 和 门店订单 共用) */
.card-footer {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-right: 30rpx;
  margin-top: 10rpx;
  padding-bottom: 30rpx;
}
.footer-price {
  display: flex;
  align-items: flex-end;
  font-size: 28rpx;
}
.price-label {
  color: #999;
  margin-right: 10rpx;
}
.price-value {
  font-size: 30rpx;
  font-weight: bold;
  color: rgb(245, 12, 12);
  position: relative;
  top: 4rpx;  
}
.price-value::before {
  content: '¥';
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 5rpx;
  position: relative;
  top: -3rpx;
}

/* 空数据占位 */
.empty-data {
  text-align: center;
  color: #999;
  margin-top: 100rpx;
}


/* --- ⭐ 特调订单列表 (定制卡片主体样式 - 最终优化，负宽度价格回归) ⭐ --- */

.cocktail-item-body-v2 {
  display: flex;
  align-items: flex-start;
  padding: 0 30rpx 30rpx; 
  height: 190rpx; 
}

.cover-image {
  width: 170rpx;
  height: 170rpx;
  object-fit: cover;
  border-radius: 10rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

/* 【名称区域】特调名称和标签区域 - 设为 flex: 1，占据所有剩余空间 */
.info-wide {
  position: relative;
  display: flex;
  flex-direction: column;
  
  /* 【关键修改 1】使用 flex: 1 占据剩余空间，而不是固定宽度 */
  flex: 1; 
  width: auto; 
  flex-shrink: 1; 
  
  height: 190rpx;
  box-sizing: border-box;
  justify-content: flex-start; 
}

.name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 5rpx;
}

/* 标签容器样式 */
.cocktail-item-body-v2 .tags {
  display: flex;
  flex-wrap: wrap; 
  margin-bottom: 10rpx;
  max-width: 100%; 
  overflow: hidden;
}

/* 单个标签样式 */
.cocktail-item-body-v2 .tag {
  font-size: 20rpx;
  color: #999;
  background-color: #f0f0f0;
  border-radius: 6rpx;
  padding: 4rpx 10rpx;
  margin-right: 10rpx;
  margin-bottom: 5rpx;
  flex-shrink: 0;
  white-space: nowrap; 
}

/* 共xxml的文本样式 */
.likes {
  color: #999;
  font-size: 24rpx;
  position: static; 
  width: auto;
}


/* 【价格区域】价格和件数区域 - 固定宽度减少，只占必要空间 */
.actions-price-only {
  position: relative;
  display: flex;
  flex-direction: column; 
  align-items: flex-end; 
  justify-content: flex-end; 
  
  /* 【关键修改 2】减少宽度，让 .info-wide 变宽 */
  width: 150rpx; /* 调整为一个较小的固定宽度 */
  flex-shrink: 0;
  
  height: 190rpx;
}

/* 件数信息在 actions 内的样式 */
.item-count-in-actions {
  margin-bottom: 5rpx;
  font-size: 28rpx;
  color: #999;
  margin-right: 2rpx;
}


/* 【价格显示】特调订单价格显示 (核心：负宽度) */
.footer-price-v2 {
  position: static; 
  
  padding: 0;
  margin: 0;
  
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
  width: 300rpx;
  padding-right: 0;
  
  /* 【关键修改 3】添加负右外边距，允许其超出容器边界，防止数字被挤压 */
  margin-right: 0rpx;
}

/* 隐藏原有的按钮容器 (WXML中已删除，此样式仅作最终保障) */
.action-buttons {
  display: none !important;
}
@charset "UTF-8";

/* index.wxss */
.page-container {
    background-color: #f7f7f7;
    min-height: 100vh;
}

/* --- Banner --- */
.promo-banner-wrapper {
    padding: 20rpx 20rpx;
}

.promo-banner-image {
    width: 100%;
    border-radius: 16rpx;
    display: block;
    height: 200rpx !important;
}

/* --- 搜索框 --- */
.product-search-wrapper {
    padding: 0rpx 20rpx;
    background-color: #f7f7f7;
}

/* 呼吸动画 */
@keyframes breathing-glow {
    0% {
        box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
    }
    50% {
        box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.15);
    }
    100% {
        box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
    }
}

.product-search-bar {
    display: flex;
    align-items: center;
    height: 60rpx;
    padding: 10rpx 30rpx;
    background-color: #ffffff;
    border-radius: 20rpx;
    animation: breathing-glow 1s ease-in-out infinite;
}

.search-icon {
    width: 32rpx;
    height: 32rpx;
    margin-right: 15rpx;
}

.search-input {
    flex: 1;
    height: 100%;
    font-size: 26rpx;
}

.placeholder-text {
    color: #999;
}

/* --- 主体内容 --- */
.main-content {
    display: flex;
    position: fixed;
    top: 340rpx; 
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
}

/* --- 左侧菜单 --- */
.sidebar-menu {
    width: 180rpx;
    background-color: #f7f7f7;
    height: 100%;
    flex-shrink: 0;
}

.menu-item {
    padding: 30rpx 10rpx;
    text-align: center;
    position: relative;
}

.menu-item-name-cn {
    font-size: 28rpx;
    color: #666;
    margin-bottom: 5rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.menu-item-name-en {
    font-size: 20rpx;
    color: #999;
    transform: scale(0.9);
    display: block;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    transform-origin: center;
}

.menu-item.active {
    background-color: #fff;
    font-weight: 700;
}

.menu-item.active .menu-item-name-cn {
    color: #333;
}

.menu-item.active .menu-item-name-en {
    color: #666;
}

.menu-item.active::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 6rpx;
    height: 100%;
    background-color: #e64340;
}

/* --- 右侧商品区 --- */
.product-content {
    flex: 1;
    background-color: #fff;
    box-sizing: border-box;
}

.product-list {
    padding: 20rpx;
    padding-bottom: 100rpx;
}

/* ⭐ 列表卡片容器：恢复默认样式，交给图片包裹器控制定位 ⭐ */
.product-card {
    display: flex;
    margin-bottom: 30rpx;
    padding-bottom: 30rpx;
    border-bottom: 1rpx solid #eee;
    background-color: #fff;
    position: static; /* 确保它不是定位基准 */
}

.product-list > .product-card:last-child {
    border-bottom: none;
    margin-bottom: 0;
    padding-bottom: 0;
}

/* ⭐ 列表图片容器：定位基准容器 ⭐ */
.product-image-wrapper {
    position: relative; /* 绝对定位基准 */
    width: 160rpx;
    height: 160rpx;
    margin-right: 20rpx;
    flex-shrink: 0;
    margin-top: 0; 
    margin-left: 0;
}

.product-image {
    width: 160rpx;
    height: 160rpx;
    border-radius: 8rpx;
}

/* ⭐ 通用标签样式 (悬浮不挤压的核心) ⭐ */
.product-sample-name-badge {
    position: absolute; /* 绝对定位，脱离文档流 */
    top: 0;
    left: 0;
    
    /* 渐变背景色 */
    background-color: rgba(15, 12, 12, 0.8); /* 半透明黑色背景 */
    color: #fff;
    font-size: 20rpx;
    font-weight: 700;
    
    /* 样式和内边距 */
    padding: 6rpx 15rpx; 
    border-top-left-radius: 8rpx; 
    border-bottom-right-radius: 8rpx;
    line-height: 1;
    z-index: 100; /* 确保悬浮在图片之上 */
    
    /* 溢出处理 */
    max-width: 90%; 
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}


.product-info {
    margin-top: 0; 
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.product-info-top {
    display: flex;
    flex-direction: column;
}

.product-name {
    font-size: 30rpx;
    font-weight: 700;
    color: #333;
}

.product-tags {
    display: flex;
    flex-wrap: wrap;
    margin-top: 8rpx;
    margin-bottom: 8rpx;
}

.tag-item {
    font-size: 20rpx;
    padding: 4rpx 10rpx;
    border-radius: 6rpx;
    margin-right: 10rpx;
    line-height: 1;
    white-space: nowrap;
}

.tag-red {
    color: #e64340;
    border: 1rpx solid #e64340;
}

.tag-black {
    color: #333;
    border: 1rpx solid #333;
}

.tag-green {
    color: #18b920;
    border: 1rpx solid #18b920;
}

.product-desc {
    font-size: 24rpx;
    color: #999;
    margin-top: 5rpx;
    margin-bottom: 5rpx;
    display: block;
    line-height: 32rpx;
    max-width: 360rpx;
}

.one-line-truncate-list {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.product-info-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 10rpx;
}

.product-price {
    font-size: 32rpx;
    font-weight: 700;
    color: #e64340;
}

.product-actions {
    display: flex;
    align-items: center;
}

.btn-add-icon {
    width: 44rpx;
    height: 44rpx;
    margin-right: 20rpx;
}

.empty-state-placeholder {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    padding-top: 50rpx;
    height: 100%;
    color: #999;
    font-size: 28rpx;
}

/* ====================================================================== */
/* --- 商品添加弹窗 (Modal) 样式复用 --- */
/* ====================================================================== */

.modal-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;

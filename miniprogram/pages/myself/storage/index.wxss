/* index.wxss - 存酒页面样式 */

/* --- 页面整体布局 --- */
page {
  background-color: #f8f8f8;
}
.page-content {
  height: 100vh;
  padding-bottom: 180rpx; /* 必须留出空间给底部按钮 */
  box-sizing: border-box;
}
.footer-spacer {
  height: 180rpx; /* 与底部按钮高度一致，避免内容被遮挡 */
}

/* --- 列表样式 (模仿截图) --- */
.wine-list {
  padding: 20rpx;
}
.list-item {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}
.item-header {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 20rpx;
}
.status {
  color: #ff4500; /* 示例状态颜色 */
}
.item-body {
  display: flex;
  align-items: flex-start;
}
.wine-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}
.info-details {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  color: #333;
}
.wine-name {
  font-weight: bold;
  margin-bottom: 10rpx;
}
.period, .remark {
  font-size: 24rpx;
  color: #888;
}
.actions {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  flex-shrink: 0;
}
.quantity {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}
.action-btn {
  background-color: #fff;
  color: #ff4500;
  border: 1rpx solid #ff4500;
  border-radius: 40rpx;
  font-size: 24rpx;
  padding: 8rpx 25rpx;
  height: auto;
  line-height: 1.5;
}

/* --- 底部悬浮按钮样式 --- */
.bottom-float-btn-wrap {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx 40rpx;
  background-color: #fff;
  box-shadow: 0 -4rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 99; /* 确保悬浮在内容之上 */
}
.store-wine-btn {
  background-color: #ff4500; /* 红色按钮 */
  color: white;
  font-size: 32rpx;
  border-radius: 60rpx;
  height: 100rpx;
  line-height: 100rpx;
}

/* --- 模态框样式 --- */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 100;
}
.modal-dialog {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 650rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  z-index: 101;
}
.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}
.form-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  font-size: 30rpx;
}
.label {
  width: 150rpx;
  flex-shrink: 0;
  color: #666;
}
input {
  flex-grow: 1;
  height: 60rpx;
}
.picker-item {
  justify-content: space-between;
}
.picker-value {
  color: #333;
}
.submit-btn {
  margin-top: 50rpx;
  background-color: #ff4500;
  color: white;
  border-radius: 60rpx;
  height: 90rpx;
  line-height: 90rpx;
}
.word-count {
  font-size: 24rpx;
  color: #aaa;
  text-align: right;
  display: block;
  margin-top: 10rpx;
}

/* 上传图片区域 */
.upload-box {
  justify-content: center;
  flex-direction: column;
  height: 200rpx;
  border: 1rpx dashed #ccc;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}
.placeholder-icon {
  font-size: 80rpx;
  color: #ccc;
  height: 100rpx;
  line-height: 100rpx;
}
.uploaded-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
}
.upload-box .label {
  width: auto;
  font-size: 26rpx;
  color: #999;
}
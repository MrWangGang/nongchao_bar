/* index.wxss - 存酒页面样式 (完整版) */
page {
  background-color: #f8f8f8;
}
.page-content {
  height: calc(100vh - 100rpx);
  box-sizing: border-box;
  padding-top: 100rpx;
}
.footer-spacer {
  height: 140rpx;
}
.tab-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  z-index: 10;
  border-bottom: 1rpx solid #eee;
}
.tab-item {
  font-size: 30rpx;
  color: #666;
  padding: 10rpx 0;
  position: relative;
}
.tab-item.active {
  color: #ff4500;
  font-weight: bold;
}
.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #ff4500;
  border-radius: 2rpx;
}
.wine-list {
  padding: 20rpx;
}
.list-item {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}
.item-header {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  padding-bottom: 10rpx;
}
.status {
  color: #ff4500;
}
.status.withdrawn {
  color: #999;
}
.item-time-row {
  font-size: 24rpx;
  color: #999;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 20rpx;
}
.item-body {
  display: flex;
  align-items: stretch;
  padding-bottom: 0;
}
.wine-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  align-self: flex-start;
}
.info-details {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  color: #333;
  align-self: flex-start;
}
.wine-name {
  font-weight: bold;
  margin-bottom: 10rpx;
}

/* 【新增】列表内数量样式 */
.quantity-inline {
    font-size: 24rpx;
    color: #ff4500; 
    font-weight: bold;
    margin: 5rpx 0 5rpx 0;
}

.period, .remark {
  font-size: 24rpx;
  color: #888;
  margin-top: -5rpx;
}
.remark {
    margin-top: 10rpx; 
    white-space: normal; 
    overflow: hidden; 
    text-overflow: ellipsis; 
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.actions {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: flex-end;
  flex-shrink: 0;
}

.button-wrap {
  width: 30rpx;
  flex-shrink: 0;
  margin-right: 100rpx;
  margin-top: 50rpx;
}
.action-btn {
  background-color: #fff;
  color: #ff4500;
  border: 1rpx solid #ff4500;
  border-radius: 15rpx;
  width: 140rpx !important;
  height: 65rpx;      
  line-height: 65rpx;
  padding: 0; 
  margin: 0;
  font-size: 26rpx;
  flex-shrink: 0;
}
.action-btn.historical-btn {
    background-color: #f0f0f0;
    color: #999;
    border: 1rpx solid #ccc;
}
.bottom-float-btn-wrap {
  position: fixed;
  right: 40rpx; 
  bottom: 0;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  z-index: 99; 
  height: auto;
  background-color: transparent;
}
.store-wine-btn {
  width: 675rpx !important;
  height: 80rpx !important;
  background-color: #ff4500;
  color: white;
  font-size: 32rpx;
  border-radius: 15rpx; 
  height: 100rpx;
  line-height: 83rpx;
  margin: 0; 
  padding: 0;
  box-shadow: 0 4rpx 10rpx rgba(255, 69, 0, 0.4);
}
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 100;
}
.modal-dialog {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 650rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  z-index: 101;
}
.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}
.form-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  font-size: 30rpx;
}
.label {
  width: 150rpx;
  flex-shrink: 0;
  color: #666;
}
input {
  flex-grow: 1;
  height: 60rpx;
}
.picker-item {
  justify-content: space-between;
}
.picker-value {
  color: #333;
}
.modal-actions-group {
    display: flex;
    justify-content: flex-end; 
    margin-top: 50rpx;
}
.cancel-btn {
    width: 260rpx !important;
    margin-right: 30rpx; 
    background-color: #f0f0f0;
    color: #333;
    border-radius: 20rpx;
    height: 80rpx; 
    line-height: 80rpx;
    font-size: 32rpx;
    padding: 0;
}
.submit-btn {
    width: 260rpx !important; 
    background-color: #ff4500;
    color: white;
    border-radius: 20rpx; 
    height: 80rpx; 
    line-height: 80rpx; 
    font-size: 32rpx;
    margin: 0;
    padding: 0;
}
.word-count {
  font-size: 24rpx;
  color: #aaa;
  text-align: right;
  display: block;
  margin-top: 10rpx;
}
.upload-box {
  justify-content: center;
  flex-direction: column;
  height: 200rpx;
  border: 1rpx dashed #ccc;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}
.placeholder-icon {
  font-size: 80rpx;
  color: #ccc;
  height: 100rpx;
  line-height: 100rpx;
}
.uploaded-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
}
.upload-box .label {
  width: auto;
  font-size: 26rpx;
  color: #999;
}

/* --- 无数据和加载提示样式 --- */
.empty-data-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 500rpx; 
    padding: 100rpx 0;
    text-align: center;
}

.empty-icon {
    width: 150rpx;
    height: 150rpx;
    background-color: #f0f0f0; 
    border-radius: 50%;
    margin-bottom: 20rpx;
}

.empty-text {
    font-size: 32rpx;
    color: #333;
    font-weight: bold;
    margin-bottom: 10rpx;
}

.empty-subtext {
    font-size: 26rpx;
    color: #999;
}

.load-more-footer {
    text-align: center;
    padding: 30rpx 0 50rpx;
    font-size: 26rpx;
}

.loading-text {
    color: #ff4500;
}

.no-more-text {
    color: #999;
}
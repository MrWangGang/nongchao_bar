/* index.wxss - 存酒页面样式 */

/* --- 页面整体布局调整 --- */
page {
  background-color: #f8f8f8;
}
/* 【修改】调整高度和 padding，为 Tab 导航栏预留空间 */
.page-content {
  height: calc(100vh - 100rpx);
/* 假设 Tab 高度 100rpx */
  box-sizing: border-box;
  padding-top: 100rpx;
}
/* 占位符：按钮高 100rpx + 底部边距 40rpx = 140rpx */
.footer-spacer {
  height: 140rpx;
}

/* --- 【新增】Tab 导航样式 --- */
.tab-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  z-index: 10;
  border-bottom: 1rpx solid #eee;
}

.tab-item {
  font-size: 30rpx;
  color: #666;
  padding: 10rpx 0;
  position: relative;
}

.tab-item.active {
  color: #ff4500;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #ff4500;
  border-radius: 2rpx;
}


/* --- 列表样式 --- */
.wine-list {
  padding: 20rpx;
}
.list-item {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}
.item-header {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  padding-bottom: 10rpx;
}

/* 默认状态颜色：用于 '已确认寄存' */
.status {
  color: #ff4500;
}

/* 【新增样式】已取出状态的颜色 (灰色) */
.status.withdrawn {
  color: #999;
}


/* 寄存时间行的样式 */
.item-time-row {
  font-size: 24rpx;
  color: #999;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 20rpx;
}

/* 列表主体布局 */
.item-body {
  display: flex;
  align-items: stretch; /* 允许子项垂直拉伸 */
  padding-bottom: 0;
}
/* 图片和信息保持在顶部 */
.wine-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  align-self: flex-start;
}
.info-details {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  color: #333;
  align-self: flex-start;
}
.wine-name {
  font-weight: bold;
  margin-bottom: 10rpx;
}
.period, .remark {
  font-size: 24rpx;
  color: #888;
  margin-top: -5rpx;
}

/* 重点修改：让备注最多显示两行，并显示省略号 */
.remark {
    margin-top: 10rpx; 
    white-space: normal; 
    overflow: hidden; 
    text-overflow: ellipsis; 
    display: -webkit-box;
    -webkit-line-clamp: 2;
/* 限制行数 */
    -webkit-box-orient: vertical;
}

/* 数量和按钮容器 */
.actions {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
/* 按钮靠右 */
  justify-content: flex-end; /* 按钮靠底 */
  flex-shrink: 0;
}
.quantity {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

/* 按钮包裹层，用于固定宽度 */
.button-wrap {
  width: 30rpx;
  flex-shrink: 0;
  margin-right: 100rpx;
  margin-top: 50rpx;
}

/* 列表卡片内按钮样式 */
.action-btn {
  background-color: #fff;
  color: #ff4500;
  border: 1rpx solid #ff4500;
  border-radius: 15rpx;
/* 强制固定尺寸 */
  width: 130rpx !important;
  height: 65rpx;      
  line-height: 65rpx;
/* 确保文本垂直居中 */
  
  /* 覆盖默认样式 */
  padding: 0; 
  margin: 0;
  
  font-size: 26rpx;
  flex-shrink: 0;
}

/* 【新增】历史记录按钮样式 */
.action-btn.historical-btn {
    background-color: #f0f0f0;
    color: #999;
    border: 1rpx solid #ccc;
}

/* --- 底部悬浮按钮样式 --- */
.bottom-float-btn-wrap {
  position: fixed;
  right: 40rpx; 
  bottom: 0;
/* 增加底部安全距离 */
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  z-index: 99; 
  height: auto;
  background-color: transparent;
}
.store-wine-btn {
  /* 约四字宽 */
  width: 675rpx !important;
  height: 80rpx !important;
  background-color: #ff4500;
  color: white;
  font-size: 32rpx;
  border-radius: 15rpx; 
  height: 100rpx;
  line-height: 83rpx;
  margin: 0; 
  padding: 0;
  box-shadow: 0 4rpx 10rpx rgba(255, 69, 0, 0.4);
}


/* --- 模态框样式 --- */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 100;
}
.modal-dialog {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 650rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  z-index: 101;
}
.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}
.form-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  font-size: 30rpx;
}
.label {
  width: 150rpx;
  flex-shrink: 0;
  color: #666;
}
input {
  flex-grow: 1;
  height: 60rpx;
}
.picker-item {
  justify-content: space-between;
}
.picker-value {
  color: #333;
}

/* 模态框底部按钮组样式 */
.modal-actions-group {
    display: flex;
    /* 【修改】改为靠右对齐 (取消按钮在左，确认按钮在右) */
    justify-content: flex-end; 
    margin-top: 50rpx;
}
/* 取消按钮样式 */
.cancel-btn {
    /* 【修改】设置固定宽度 */
    width: 260rpx !important; 
    /* 调整按钮间距 */
    margin-right: 30rpx; 
    background-color: #f0f0f0;
    color: #333;
    /* 尺寸调整 */
    border-radius: 20rpx; 
    height: 80rpx; 
    line-height: 80rpx;
    /* 尺寸调整 */
    font-size: 32rpx;
    padding: 0;
}
.submit-btn {
    /* 【修改】设置固定宽度 */
    width: 260rpx !important; 
    background-color: #ff4500;
    color: white;
    /* 尺寸调整 */
    border-radius: 20rpx; 
    height: 80rpx; 
    line-height: 80rpx; 
    /* 尺寸调整 */
    font-size: 32rpx;
    margin: 0;
/* 清除默认 margin */
    padding: 0;
}

.word-count {
  font-size: 24rpx;
  color: #aaa;
  text-align: right;
  display: block;
  margin-top: 10rpx;
}
.upload-box {
  justify-content: center;
  flex-direction: column;
  height: 200rpx;
  border: 1rpx dashed #ccc;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}
.placeholder-icon {
  font-size: 80rpx;
  color: #ccc;
  height: 100rpx;
  line-height: 100rpx;
}
.uploaded-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
}
.upload-box .label {
  width: auto;
  font-size: 26rpx;
  color: #999;
}
<scroll-view class="container" scroll-y>
    <view class="user-card">
        <view class="user-main-info">
            <image class="user-avatar" src="{{userInfo.avatar}}" mode="aspectFill"></image>
            <view class="name-phone">
                <text class="user-name">{{userInfo.name}}</text>
                <block wx:if="{{userInfo.phone}}">
                    <text class="user-phone">{{userInfo.phone}}</text>
                </block>
                <block wx:else>
                    <text class="user-phone empty-text">请完善个人信息</text>
                </block>
            </view>
            <view class="nav-buttons">
                <view class="nav-button" bindtap="goToEditProfile"><image class="nav-icon" src="cloud://cloud1-7gy6iiv5f0cbcb43.636c-cloud1-7gy6iiv5f0cbcb43-1379173903/素材/myself_button_edit.png"></image></view>
                <view class="nav-button" bindtap="goToSettings"><image class="nav-icon" src="cloud://cloud1-7gy6iiv5f0cbcb43.636c-cloud1-7gy6iiv5f0cbcb43-1379173903/素材/myself_button_setting.png"></image></view>
            </view>
        </view>
        
        <view class="vip-banner">
            <view class="vip-header">
                <view class="vip-info">
                    <text class="vip-level">【{{currentLevelName}}】</text>
                    <text class="vip-text">VIP {{vipLevel}}</text>
                </view>
                <view class="vip-rights" bindtap="goToVipRights">
                    <text>会员权益</text>
                    <text class="arrow">></text>
                </view>
            </view>
            
            <view class="vip-footer">
                <view class="progress-area">
                    <view class="exp-text-group">
                        <text class="exp-current-value">{{vipExp}}</text>
                        <text class="exp-next-level">{{nextLevelText}}</text>
                    </view>
                    <view class="progress-bar-container">
                        <view class="progress-bar" style="width: {{progressPercent}}%;"></view>
                    </view>
                </view>
                
                <view class="qr-code-placeholder">
                    <image class="qr-icon" src="cloud://cloud1-7gy6iiv5f0cbcb43.636c-cloud1-7gy6iiv5f0cbcb43-1379173903/素材/qr.png"></image> 
                </view>
            </view>
        </view>
    </view>
</scroll-view>

<authorize></authorize>
/* pages/board/board.wxss */
.container {
  background-color: #f7f7f7;
  min-height: 100vh;
}

/* 顶部信息展示 */
.header-info {
    margin-bottom: 30rpx;
    padding: 20rpx 10rpx; 
    font-size: 28rpx;
    color: #666;
    text-align: center;
}

.board-card {
  display: flex;
  align-items: center; 
  margin-bottom: 20rpx;
  
  /* ========================================= */
  /* 核心：设置为相对定位，作为绝对定位的参考点 */
  position: relative; 
  width: 550rpx; 
  margin: 30rpx auto 0rpx auto; 
  /* ========================================= */
  
  /* 调整：右侧留出更多空间，避免内容被右上角的标签遮挡 */
  padding: 40rpx 100rpx 40rpx 30rpx; 
  
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.board-content {
  display: flex;
  align-items: center;
  flex: 1; 
  min-width: 0; 
}

.board-icon-wrapper {
  width: 100rpx;
  height: 100rpx;
  background-color: #ffe5e5; 
  border-radius: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 30rpx;
  box-shadow: inset 0 0 5rpx rgba(229, 77, 66, 0.3);
  flex-shrink: 0; 
}

.board-icon {
    width: 100rpx;
    height: 100rpx;
}

.board-info {
  display: flex;
  flex-direction: column;
  flex: 1;
  min-width: 0; 
  overflow: hidden;
}

.board-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  white-space: nowrap; 
  overflow: hidden;
  text-overflow: ellipsis;
}

.board-desc {
  font-size: 24rpx;
  color: #999;
  white-space: nowrap; 
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 标签区域 (Absolute Positioning) */
.board-action {
    /* 核心修改：绝对定位到卡片的右上角，数值更小实现紧贴边缘 */
    position: absolute;
    top: 15rpx; 
    right: 15rpx; 
    
    width: auto; 
    text-align: right;
    flex-shrink: 0;
    margin-left: 0rpx;
}

/* 标签样式 (Fixed Width) */
.board-action .btn {
  /* ========================================= */
  /* 【核心修改 1】设置绝对宽度 */
  width: 120rpx; 
  
  /* 【核心修改 2】使用 flexbox 使文字水平和垂直居中 */
  display: flex;
  justify-content: center;
  align-items: center; 
  
  /* 【核心修改 3】内容溢出处理（确保文字不会破坏固定宽度）*/
  white-space: nowrap; 
  overflow: hidden;
  text-overflow: ellipsis; 
  /* ========================================= */
  
  height: 40rpx;
  line-height: 40rpx; /* 可选，Flexbox 已实现垂直居中 */
  font-size: 24rpx; 
  padding: 0; /* 移除 padding，宽度由 width: 120rpx 决定 */
  border-radius: 8rpx; 
  margin: 0;
  
  border: none;
  transition: all 0.2s ease-in-out; 
}


/* 1. 【佩戴】标签 - 突出主色调 */
.btn-claim {
  background-color: #ff5e5e; 
  color: #fff;
  font-weight: bold;
  box-shadow: none; /* 移除阴影 */
}
.btn-claim:active {
  transform: none; /* 移除点击效果 */
}


/* 2. 【已佩戴】标签 - 柔和的选中态 */
.btn-current {
  background-color: #e0e0e0; 
  color: #666;
  border: 1rpx solid #ccc; 
}
.btn-current[disabled] {
    opacity: 1; 
}

/* 3. 【等级不足/锁定】标签 - 醒目的未解锁状态 */
.btn-locked {
  background-color: #f7f7f7; 
  color: #e54d42; 
  border: 1rpx dashed #ffb8b8; 
  font-weight: bold;
}
.btn-locked[disabled] {
    opacity: 1; 
}

/* 等级不足的卡片样式（视觉弱化） */
.disabled-card {
  opacity: 0.7;
}
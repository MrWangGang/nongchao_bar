/* =================================================== */
/* GLOBAL/CONTAINER STYLES */
/* =================================================== */
.container {
  background-color: #f7f8fa;
  min-height: 100vh;
  box-sizing: border-box;
  position: relative;
}

/* Background Image Container (z-index 0) */
.background-image-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 0;
  height: 600rpx; /* Height for top area */
  overflow: hidden;
}

.background-image {
  width: 100%;
  height: auto;
}

/* =================================================== */
/* USER CARD AREA (z-index 10) */
/* =================================================== */
.user-card {
  /* padding-top 在 wxml 中动态设置 */
  padding-right: 40rpx;
  padding-bottom: 40rpx;
  padding-left: 40rpx;
  background: transparent;  
  position: relative;
  z-index: 10;
  margin-bottom: 24rpx;
}

.user-main-info {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  margin-top: 80rpx; 
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  border: 4rpx solid #fff;
  flex-shrink: 0;
}

.name-phone {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  min-width: 0;
}

.user-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.user-phone {
  font-size: 28rpx;
  color: #999;
}
.empty-text {
  color: #9c8b8b; /* 提示用户完善信息 */
}


.nav-buttons {
  display: flex;
  margin-left: auto; /* 推到最右边 */
  flex-shrink: 0;
}

.nav-button {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}

.nav-icon {
  width: 40rpx;
  height: 40rpx;
}

/* =================================================== */
/* VIP CARD AREA */
/* =================================================== */
/* VIP CARD AREA */
.vip-banner {
  /* 核心修改点：使用 RGBA 格式来设置背景色和透明度 */
  /* 原始色 #333333 的 RGB 为 (51, 51, 51) */
  background-color: rgba(51, 51, 51, 0.7); /* 0.8 表示 80% 不透明度 */
  
  /* 渐变色也需要相应调整透明度，或直接移除渐变 */
  /* 如果要保留渐变，也需使用 RGBA: */
  background-image: linear-gradient(to right, rgba(51, 51, 51, 0.8), rgba(85, 85, 85, 0.8)); /* 85, 85, 85 是 #555555 的 RGB */
  
  border-radius: 20rpx;
  padding: 30rpx 40rpx;
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.vip-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20rpx;
}

.vip-info {
    display: flex;
    align-items: baseline;
}

.vip-level {
    font-size: 28rpx;
    color: #f0e68c; /* 浅金色 */
    margin-right: 15rpx;
}

.vip-text {
    font-size: 36rpx;
    font-weight: bold;
    color: #ffd700; /* 金色 */
}

.vip-rights {
    display: flex;
    align-items: center;
    font-size: 28rpx;
    color: rgb(255, 255, 255);
    padding: 10rpx 20rpx;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 20rpx;
}

.vip-rights .arrow {
    margin-left: 8rpx;
    font-size: 24rpx;
}

.vip-footer {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
}

.progress-area {
    flex-grow: 1;
    margin-right: 30rpx;
}

/* 经验值文本组 */
.exp-text-group {
    display: flex;
    align-items: baseline; /* 保持数字和文字底部对齐 */
    margin-bottom: 8rpx;
}

/* 放大当前累计经验值 */
.exp-current-value {
    font-size: 48rpx; /* 显著放大 */
    font-weight: bold;
    color: #ffffff; 
    line-height: 1; /* 确保垂直对齐正常 */
    margin-right: 10rpx;
}

/* 下一级提示 */
.exp-next-level {
    font-size: 24rpx; 
    color: #ccc;
    line-height: 1;
}


/* 进度条 */
.progress-bar-container {
    height: 10rpx;
    background-color: rgba(255, 255, 255, 0.3);
    border-radius: 5rpx;
    overflow: hidden;
}

.progress-bar {
    height: 100%;
    background-color: #ffd700; /* 进度条颜色 */
    transition: width 0.3s ease-in-out;
    border-radius: 5rpx;
}

/* 二维码占位符 */
.qr-code-placeholder {
    width: 60rpx;
    height: 60rpx;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 10rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.qr-icon {
    width: 60rpx;
    height: 60rpx;
    filter: invert(0%); /* 假设图标是黑色的，反色以适应深色背景 */
}
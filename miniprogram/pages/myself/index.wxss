/* =================================================== */
/* GLOBAL/CONTAINER STYLES */
/* =================================================== */
.container {
  background-color: #f7f8fa; /* 页面其余部分的背景色 */
  min-height: 100vh;
  box-sizing: border-box;
  position: relative;
}

/* 顶部背景图片样式 (用于 WXML 中的 <image> 标签) */
.background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1; /* 确保用户卡片在其上方 */
  height: 350rpx; /* 设定高度以覆盖用户卡片区域 */
}

/* =================================================== */
/* USER CARD AREA (z-index 10) */
/* =================================================== */
.user-card {
  padding-right: 40rpx;
  padding-bottom: 40rpx;
  padding-left: 40rpx;
  background: transparent;  
  position: relative;
  z-index: 10; /* 确保用户卡片和 VIP 卡片位于背景图之上 */
  margin-bottom: 24rpx;
}

.user-main-info {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  /* 核心修改：增加顶部间距到 120rpx，留出状态栏和顶部空间 */
  margin-top: 190rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  border: 4rpx solid #fff;
  flex-shrink: 0;
}

.name-phone {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  min-width: 0;
}

.user-name {
  font-size: 40rpx;
  font-weight: bold;
  color: rgb(231, 225, 225);
  margin-bottom:  8rpx;
}

.user-phone {
  font-size: 28rpx;
  color: rgb(255, 255, 255);
  font-weight: bold;
}
.empty-text {
  color: rgb(0, 0, 0);
  font-weight: bold;

}


.nav-buttons {
  display: flex;
  margin-left: auto;  
  flex-shrink: 0;
}

.nav-button {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}

.nav-icon {
  width: 40rpx;
  height: 40rpx;
}

/* VIP 图片图标样式调整 */
.nav-icon-vip {
  width: 55rpx;
  height: 55rpx;
  /* 关键修改：强制图片垂直居中对齐 */
  vertical-align: middle; 
  display: inline-block;
}

/* =================================================== */
/* VIP CARD AREA */
/* =================================================== */
.vip-banner {
  /* 核心修改点：使用 RGBA 格式来设置背景色和透明度 */
  background-color: rgba(51, 51, 51, 0.7);
/* 渐变色也需使用 RGBA: */
  background-image: linear-gradient(to right, rgba(51, 51, 51, 0.8), rgba(85, 85, 85, 0.8));
  
  border-radius: 20rpx;
  padding: 30rpx 40rpx;
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 24rpx;
/* 增加底部间距与新卡片组隔开 */
}

.vip-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.vip-info {
  display: flex;
/* 核心修改：使用 center 确保所有行内元素垂直居中对齐 */
  align-items: center;
}

.nick-name {
  font-size: 38rpx;
  color: #cec8c8;  
  margin-right: 15rpx;
/* 统一行高以辅助对齐 */
  line-height: 1; 
}
.vip-level {
  font-size: 28rpx;
  color: #d6d5cb;  
  margin-right: 15rpx;
  line-height: 1;
}

.vip-text {
  font-size: 40rpx;
  font-weight: bold;
  color: #e0f146;  
  margin-left: 5rpx;
  /* 统一行高以辅助对齐 */
  line-height: 1;
}

/* NEW: 右侧按钮组容器，让两个按钮在 space-between 布局中保持在一起 */
.right-buttons {
  display: flex;
  align-items: center;
}

/* NEW: 账号详情按钮样式 (参考 vip-rights) */
.account-details {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: rgb(187, 241, 116);
  padding: 10rpx 20rpx;
  background-color: rgba(200, 245, 117, 0.1);
  border-radius: 20rpx;
  /* 增加右侧间距，与 vip-rights 隔开 */
  margin-right: 20rpx;
}


.vip-rights {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: rgb(229, 255, 0);
  padding: 10rpx 20rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  margin-right: 0rpx; 

}

.vip-rights .arrow {
  margin-left: 8rpx;
  font-size: 24rpx;
}

.vip-footer {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.progress-area {
  flex-grow: 1;
  margin-right: 30rpx;
}

/* 经验值文本组 */
.exp-text-group {
  display: flex;
  align-items: baseline;
  margin-bottom: 8rpx;
}

/* 放大当前累计经验值 */
.exp-current-value {
  font-size: 40rpx; 
  font-weight: bold;
  color: #ffffff;
  line-height: 1; 
  margin-right: 10rpx;
}

/* 下一级提示 */
.exp-next-level {
  font-size: 24rpx;
  color: #ccc;
  line-height: 1;
}


/* 进度条 */
.progress-bar-container {
  height: 10rpx;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 5rpx;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  background-color: #ffd700; 
  transition: width 0.3s ease-in-out;
  border-radius: 5rpx;
}

/* 二维码占位符 */
.qr-code-placeholder {
  width: 60rpx;
  height: 60rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.qr-icon {
  width: 60rpx;
  height: 60rpx;
  filter: invert(0%);
}


/* =================================================== */
/* NEW: 功能导航卡片组 (Nav Grid) - 独立卡片样式 */
/* =================================================== */
.nav-grid-container {
  display: flex;
/* 启用 Flex 布局实现横向排列 */
  justify-content: space-between; /* 在卡片间均匀分配空间 */
  align-items: flex-start;
  margin-top: 35rpx;
/* 默认向下移动 30rpx。你可以根据需要增加或减少这个值 */
  /* 容器的左右内边距，确保卡片与屏幕边缘有距离 (继承自 .user-card 的边距) */
  margin-bottom: 40rpx;
}

/* 独立卡片样式 - 确保卡片尺寸一致 */
.nav-item-standalone {
  /* 基础卡片样式 */
  background-color: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  
  /* 尺寸和布局 */
  /* 修复 WXSS calc() 编译错误：避免使用复杂的除法，简化为 25% - 15rpx */
  width: calc(25% - 15rpx);
  height: 150rpx; /* 设置一个固定的统一高度 */
  padding: 20rpx 0; /* 内部上下内边距 */
  box-sizing: border-box;
/* 确保 padding 不会增加最终宽度 */
  flex-shrink: 0;
  
  /* 内部内容居中 */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
/* 确保图标和文本垂直居中 */
  text-align: center;
}

.nav-item-text {
  font-size: 24rpx;
  color: #333333;
  font-weight: 500;
}

.nav-item-text1 {
  font-size: 26rpx;
  color: #333333;
  font-weight: 500;
  margin-top:-8rpx ;
}

/* 独立图标样式，大小可根据需求不同 */
.icon-orders {
  width: 65rpx;
  height: 65rpx;
  margin-bottom: 5rpx;
}

.icon-cellar {
  width: 65rpx;
  height: 65rpx;
  margin-bottom: 5rpx;
}

.icon-lightboard {
  width: 65rpx;
  height: 65rpx;
  margin-bottom: 5rpx;
}

.icon-ranking {
  width: 65rpx;
  height: 65rpx;
  margin-bottom: 5rpx;
}

/* =================================================== */
/* NEW: 排行榜卡片样式 (Rank Card) */
/* =================================================== */
.rank-card {
  position: relative; /* 允许子元素绝对定位 */
  background-color: #ffffff; /* 卡片白底 */
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05); 
  
  margin-bottom: 40rpx; 
  padding-bottom: 40rpx; 
  overflow: hidden; 
  height: 480rpx; /* 设定固定高度，容纳背景图和主体内容 */
}

/* 卡片背景图 (rank_back.png) */
.rank-back-image {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%; /* 允许图片撑满卡片 */
  z-index: 1; /* 确保在最底层 */
  margin-bottom: 100rpx;
}


/* 头部标题区域 */
.rank-header {
  position: relative;
  height: 80rpx; /* 标题背景图高度 */
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 3; /* 确保在卡片背景之上 */
}

/* 头部背景图片 (rank_head.png) */
.rank-header-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1; 
}

/* 头部覆盖文本 */
.rank-title {
  position: relative;
  z-index: 2; /* 确保在头部背景图之上 */
  font-size: 32rpx;
  font-weight: bold;
  color: #ecece1;
}

/* 排行榜主体布局 */
.rank-body {
  position: relative;
  display: flex;
  justify-content: space-around;
  align-items: flex-start; 
  padding-top: 50rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  z-index: 3; /* 确保在卡片背景之上 */
}

/* 单个排名项 */
.rank-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  width: 30%; /* 均匀分配空间 */
}

/* 排名1 特殊样式 (最高) */
.rank-item-1 {
  /* 排名1在中间，相对位置更高 */
  transform: translateY(-40rpx); 
}

/* 排名2/3 特殊样式 */
.rank-item-2, .rank-item-3 {
  /* 排名2/3稍微低一些 */
  transform: translateY(60rpx);
}


/* 头像容器 */
.rank-avatar-wrapper {
  position: relative;
  width: 220rpx; 
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: -10rpx;
}
/* 排名1头像容器尺寸 */
.rank-avatar-wrapper-1 {
  width: 220rpx; 
  height: 200rpx;
  margin-top: 20rpx;
}

/* 头像框图片 (排名1、2、3) */
.rank-border {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 3; /* 确保框在头像之上 */
}

/* 实际用户头像 */
.rank-avatar {
  position: absolute;
  width: 140rpx; /* 默认头像尺寸 */
  height: 140rpx;
  border-radius: 50%;
  /* ⬇️ 修复：提高 z-index，确保头像位于边框之上 */
  z-index: 4; 
  /* ⬇️ 修复：使用绝对定位居中，确保头像位置正确 */
  top: 50%;
  left: 50%;
  transform: translate(-50%, -77%);
}
/* 排名1头像尺寸 */
.rank-avatar-1 {
  width: 150rpx;
  height: 150rpx;
  /* ⬇️ 修复：微调排名 1 头像位置，可能需要稍微抬高以匹配头像框设计 */
  transform: translate(-50%, -80%);
}


/* 用户昵称 */
.rank-name {
  font-size: 26rpx;
  color: #666666;
  margin-top: 20rpx;
  font-weight: bold;
}
.rank-name-1 {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}


/* 排名值 (积分/经验等) */
.rank-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}
.rank-value-1 {
  font-size: 40rpx;
  color: #FF7F50; /* 排名1使用亮眼的颜色 */
}
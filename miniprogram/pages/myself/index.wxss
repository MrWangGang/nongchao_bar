/* =================================================== */
/* GLOBAL/CONTAINER STYLES */
/* =================================================== */
.container {
  background-color: #f7f8fa; /* 页面其余部分的背景色 */
  min-height: 100vh;
  box-sizing: border-box;
  position: relative;
}

/* 顶部背景图片样式 (用于 WXML 中的 <image> 标签) */
.background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1; /* 确保用户卡片在其上方 */
  height: 350rpx; /* 设定高度以覆盖用户卡片区域 */
}

/* =================================================== */
/* USER CARD AREA (z-index 10) */
/* =================================================== */
.user-card {
  padding-right: 40rpx;
  padding-bottom: 40rpx;
  padding-left: 40rpx;
  background: transparent;  
  position: relative;
  z-index: 10; /* 确保用户卡片和 VIP 卡片位于背景图之上 */
  margin-bottom: 24rpx;
}

.user-main-info {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  /* 核心修改：增加顶部间距到 120rpx，留出状态栏和顶部空间 */
  margin-top: 190rpx;  
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  border: 4rpx solid #fff;
  flex-shrink: 0;
}

.name-phone {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  min-width: 0;
}

.user-name {
  font-size: 40rpx;
  font-weight: bold;
  color: rgb(231, 225, 225);
  margin-bottom:  8rpx;
}

.user-phone {
  font-size: 28rpx;
  color: rgb(255, 255, 255);
  font-weight: bold;

}
.empty-text {
  color: rgb(0, 0, 0);
  font-weight: bold;

}


.nav-buttons {
  display: flex;
  margin-left: auto;  
  flex-shrink: 0;
}

.nav-button {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}

.nav-icon {
  width: 40rpx;
  height: 40rpx;
}

/* VIP 图片图标样式调整 */
.nav-icon-vip {
  width: 55rpx;
  height: 55rpx;
  /* 关键修改：强制图片垂直居中对齐 */
  vertical-align: middle; 
  display: inline-block;
}

/* =================================================== */
/* VIP CARD AREA */
/* =================================================== */
.vip-banner {
  /* 核心修改点：使用 RGBA 格式来设置背景色和透明度 */
  background-color: rgba(51, 51, 51, 0.7); 
  
  /* 渐变色也需使用 RGBA: */
  background-image: linear-gradient(to right, rgba(51, 51, 51, 0.8), rgba(85, 85, 85, 0.8));
  
  border-radius: 20rpx;
  padding: 30rpx 40rpx;
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.vip-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.vip-info {
  display: flex;
  /* 核心修改：使用 center 确保所有行内元素垂直居中对齐 */
  align-items: center; 
}

.nick-name {
  font-size: 38rpx;
  color: #cec8c8;  
  margin-right: 15rpx;
  /* 统一行高以辅助对齐 */
  line-height: 1; 
}
.vip-level {
  font-size: 28rpx;
  color: #d6d5cb;  
  margin-right: 15rpx;
  line-height: 1; 
}

.vip-text {
  font-size: 40rpx;
  font-weight: bold;
  color: #e0f146;  
  margin-left: 5rpx;
  /* 统一行高以辅助对齐 */
  line-height: 1; 
}

.vip-rights {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: rgb(255, 255, 255);
  padding: 10rpx 20rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
}

.vip-rights .arrow {
  margin-left: 8rpx;
  font-size: 24rpx;
}

.vip-footer {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.progress-area {
  flex-grow: 1;
  margin-right: 30rpx;
}

/* 经验值文本组 */
.exp-text-group {
  display: flex;
  align-items: baseline;  
  margin-bottom: 8rpx;
}

/* 放大当前累计经验值 */
.exp-current-value {
  font-size: 48rpx;  
  font-weight: bold;
  color: #ffffff;
  line-height: 1;  
  margin-right: 10rpx;
}

/* 下一级提示 */
.exp-next-level {
  font-size: 24rpx;
  color: #ccc;
  line-height: 1;
}


/* 进度条 */
.progress-bar-container {
  height: 10rpx;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 5rpx;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  background-color: #ffd700;  
  transition: width 0.3s ease-in-out;
  border-radius: 5rpx;
}

/* 二维码占位符 */
.qr-code-placeholder {
  width: 60rpx;
  height: 60rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.qr-icon {
  width: 60rpx;
  height: 60rpx;
  filter: invert(0%);  
}